<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingPageActivity"
    android:background="@mipmap/readpagebg0"
    android:id="@+id/rl_readingpagecontent">
    <ImageView
        android:visibility="gone"
        android:id="@+id/img_readbookmark"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@mipmap/readpagebookmark"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-5dp"
        android:tint="#B83838"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/tv_readingpagecontent"
        android:textSize="18sp"
        android:textColor="#000"
        android:lineSpacingExtra="16dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/battery"
                android:tint="#5F5F5F"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <ProgressBar
                android:id="@+id/vi_readingpagebattery"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/batteryprogress"
                android:max="100"
                android:progress="0"
                android:layout_height="7dp"
                android:layout_width="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2.1dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_readingpagetime"
            android:textColor="#5F5F5F"
            android:textSize="10sp"
            android:text="00:00"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_readingpagepage"
            android:textColor="#5F5F5F"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_readingpagebg"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/rl_readingpagebottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#E6000000"
            android:paddingTop="15dp"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rl_readingpagecatalogbt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@mipmap/catalog"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目录"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_readingpagelightbt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@mipmap/intensity"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亮度"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_readingpageaddmarkbt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@mipmap/readbookmark"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_readingpagemarktitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加书签"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#E6000000"
            android:id="@+id/rl_readingpagetop"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/img_readpageactive_goback"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@mipmap/goback"
                android:tint="#FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_readingpagerightbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A000000"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/rl_readingpagerightlan"
            android:visibility="gone"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#FCFDF8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F2F5DC">
                <ImageView
                    android:id="@+id/img_catalogbt"
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/catalog"
                    android:tint="#FF9800"/>
                <ImageView
                    android:id="@+id/img_readbookmarkbt"
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/readbookmark"
                    android:tint="#9B9E79"/>
            </LinearLayout>
            <ListView
                android:id="@+id/lv_catalog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <ListView
                android:id="@+id/lv_bookmark"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_readingpagebg1"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ly_readingpagelight"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#E6000000"
            android:layout_alignParentBottom="true"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tv_lightfollowsystem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="跟随系统"
                android:gravity="center"
                android:background="@drawable/rounded_text"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_setnightpattern"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="夜间模式"
                android:gravity="center"
                android:background="@drawable/rounded_text"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="亮度"
                android:textSize="12sp"
                />
            <SeekBar
                android:id="@+id/sb_readingpagelight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@drawable/tab_menu_zone"/>
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_readingpagebg2"
        android:background="#7A000000"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/ly_idear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FCFDF8"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:src="@mipmap/idealbt"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/et_idealedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="80dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="5dp"
                    android:hint="这么好的句子，难道没点想法吗？"
                    android:textColor="#000"
                    android:textColorHint="#BEBEA8"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.2"
                    android:background="@null"
                    android:layout_alignRight="@id/bt_idealpush"/>
                <TextView
                    android:id="@+id/bt_idealpush"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#2890A8"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EBEBE7"/>
            <TextView
                android:id="@+id/tv_idealsentence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="12sp"
                android:textColor="#BEBEA8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="引用：大叔大婶大所大所大所大所大大所大所多大所大大所大所大所多"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>