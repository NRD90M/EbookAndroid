<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listitem_bookmark"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/listitem_bookmarktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第一章 科学边界"
        android:textColor="#444635"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_height="8dp"
            android:layout_width="10dp"
            android:background="@mipmap/readpagebookmark"
            android:backgroundTint="#7E7D7B"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/listitem_bookmarkpage"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="10sp"
            android:textColor="#7A7E65"/>
        <TextView
            android:id="@+id/listitem_bookmarktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12小时前"
            android:textSize="10sp"
            android:textColor="#7A7E65"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/listitem_bookmarktext"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="13sp"
        android:textColor="#444635"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="10dp"
        android:lines="4"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDD3AE" />
</LinearLayout>